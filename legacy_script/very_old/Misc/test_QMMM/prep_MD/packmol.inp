# All atoms from diferent molecules will be at least 2.0 Angstroms apart
tolerance 3.0

# The type of the files will be pdb
filetype xyz

# The name of the output file
output system.xyz

# put the COM of the solute at the center of the box
structure OPT_c60-Ih_m.xyz
  number 1
  fixed 20.0 30.0 30.0 0. 0. 0.
  centerofmass
end structure

# add pyrene
structure OPT_pyrene_m.xyz
  number 1
  fixed 40.0 30.0 30.0 1.57 0. 0.
  centerofmass
end structure

# add first type of solvent molecules
structure OPT_o-xylene_m.xyz
  number 750
  inside cube 0. 0. 0. 60
end structure

